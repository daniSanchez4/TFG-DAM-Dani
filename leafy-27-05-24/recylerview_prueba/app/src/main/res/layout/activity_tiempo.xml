<?xml version="1.0" encoding="utf-8"?>






<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="640dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/gradient_background"
    android:id="@+id/card"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">


        <ImageView
            android:id="@+id/sol"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/new_sun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Lunes"
            android:textAlignment="center"
            android:textColor="@color/white"


            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textoTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="19ยบ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="100dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sol" />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardBackgroundColor="#0638af">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacionviento"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/windy"
                tools:layout_editor_absoluteX="64dp"
                tools:layout_editor_absoluteY="464dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="15dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacionhumedad"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/humeda"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="464dp"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/textoViento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="580dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="35dp"/>


            <TextView
                android:id="@+id/textohumedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="580dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="234dp"/>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>

